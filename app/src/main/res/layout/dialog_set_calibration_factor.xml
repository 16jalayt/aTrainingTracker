<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMeassured"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/meassuredDistanceText" />

        <TextView
            android:id="@+id/tvCorrect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/trueDistanceText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etMeassured"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number|numberDecimal"
            android:text="@string/measuredDistanceValue" />

        <EditText
            android:id="@+id/etCorrect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number|numberDecimal"
            android:text="@string/trueDistanceValue" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvCalibrationFactor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/calibrationFactor_Text" />

    <EditText
        android:id="@+id/etCalibrationFactor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:text="@string/calibrationFactor_Value" />

</LinearLayout>
