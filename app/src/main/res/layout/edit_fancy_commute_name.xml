<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewSport"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/Sport" />

        <Spinner
            android:id="@+id/spinnerSport"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewStartLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/StartLocation" />

        <Spinner
            android:id="@+id/spinnerStartLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewEndLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/EndLocation" />

        <Spinner
            android:id="@+id/spinnerEndLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewFancyBaseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NameScheme" />

    <EditText
        android:id="@+id/editTextFancyBaseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxAddCounter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/addCounter" />

        <Button
            android:id="@+id/buttonDecrementCounter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/my_blue"
            android:text="-"
            android:textColor="@color/my_white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="2"
            android:inputType="numberDecimal"
            android:minEms="2"
            android:text="10" />

        <Button
            android:id="@+id/buttonIncrementCounter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/my_blue"
            android:text="+"
            android:textColor="@color/my_white"
            android:textSize="20sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBoxAddVia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addVia" />

</LinearLayout>