<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llSegmentLeaderboardRow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivSegmentAthletePicture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/logo_512" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSegmentAthleteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max Mustermann"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSegmentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3:15 min"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvSegmentAverageSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="45 km/h"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>